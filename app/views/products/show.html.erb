<a href="/products"><< Back</a>

<h1><%= @product.name %> Info Page</h1>

<p>Cost: $<%= @product.cost %></p>
<p>Origin: <%= @product.origin %></p>


<div class="update">
  <h4>Update Product</h4>
  <%= render 'products/form'%>
</div>

<div class="destroy">
  <h4>Delete Product</h4>
  <p><%= link_to "Delete", product_path(@product), :data => {:confirm => "Are you sure?", :method => "delete"} %></p>
</div>

<div class="reviews">

  <h4>Add a Review</h4>
  <%= render 'reviews/form'%>


  <h4>User Reviews</h4>
  <ol>
    <% @reviews.each do |review| %>
    <li>
      <ul>
        <li> Author: <%= review.author %></li>
        <li> Rating: <%= review.rating %></li>
        <li> Review: <%= review.content_body %></li>
      </ul>
    </li>
    <% end %>
  </ol>
</div>

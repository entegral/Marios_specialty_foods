<!DOCTYPE html>
<html>
  <head>
    <title>MariosSpecialtyFoods</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <div class="jumbotron">
      <h1 class="display-4">Mario's Plumbing and Pastry Shoppe</h1>
      <p class="lead"> <% if @lead %> <%= @lead %> <% end %> </p>
      <hr class="my-4">
    </div>

      <ul id="header-links" class="nav nav-tabs nav-justified">
        <li class="nav-item">
          <a class="nav-link <% if @landing %><%= @landing %><% end %>" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link <% if @index %><%= @index %><% end %>" href="/products">Products</a>
        </li>
      </ul>

      <%= yield %>

  </body>
</html>
